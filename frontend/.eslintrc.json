{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "react/jsx-filename-extension": 0,
    "no-underscore-dangle": 0,
    "import/extensions": 0,
    "react/prefer-stateless-function": 0
  }
}
